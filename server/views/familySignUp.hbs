 <header>
  {{>navNoButton}}
 </header>

 

 <section id = "card-display">
  <div class="card-container">
    <a class="front-card" href="/all/families">
      <div class="inside-container">
        <div class="image-position">
          <img src="/images/together.png" class="form-img-size" alt="together">
        </div>
        <div class ="text-position">
          <h2 class="title-text">We'll just need some details.</h2>
          <form action="/family/signup" method="post" class="form text-card">

            <label for="surname">Family Name</label>
            <input type="text" name="surname" placeholder="e.g. Smith"><br>

            <label for="size">Number of Family Members</label>
            <input type="text" name="size" placeholder="e.g. 4"><br>

            <label for="location">Location</label>
            <input type="text" name="location" placeholder="e.g. Wales"><br>
          {{!-- 
            <label for="smokers">Are smokers welcome in this household?</label>
            <select>
              <option name='smokers' value="true">Yes</option>
              <option name='smokers' value="false">No</option>
            </select>

            <label for="pets">Does this household have pets?</label>
            <select>
              <option name='pets' value="true">Yes</option>
              <option name='pets' value="false">No</option>
            </select> --}}

            <label for="description">Description</label>
            <textarea rows="4" name="description" placeholder="e.g. We are a warm family, looking to welcome you into our home this Xmas!"></textarea><br>

            <button type="submit" class="text-card form-button">Sign Me Up!</button>

          </form>
        </div>
      </div>
    </a>  
  </div>
</section>



  

